{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.0.0-beta.2",
    "@hotwired/turbo-rails": "^7.0.0-rc.4",
    "govuk-frontend": "^3.13.1",
    "esbuild": "^0.12.28",
    "sass": "^1.41.1"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --outdir=app/assets/builds",
    "build:fonts": "find node_modules/govuk-frontend/govuk/assets/fonts/ | entr cp -rT node_modules/govuk-frontend/govuk/assets/fonts app/assets/builds/fonts",
    "build:images": "find node_modules/govuk-frontend/govuk/assets/images/ | entr cp -rT node_modules/govuk-frontend/govuk/assets/images app/assets/builds/images",
    "build:css": "sass ./app/assets/stylesheets/application.sass.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules"
  }
}
